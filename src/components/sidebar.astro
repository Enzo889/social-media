<style>
  aside {
    display: flex;
    align-items: start;
    width: 100%;
    max-width: var(--sidebar-width);
    justify-content: end;
  }

  ul {
    padding: 0;
    margin: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  li {
    padding: 0.95rem;
  }
  a {
    color: var(--grey1);
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;

    & svg {
      width: 24px;
      height: 24px;
      color: var(--grey3);
    }

    & img {
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }
  }

  a.active {
    color: var(--grey1);
    & svg {
      color: var(--grey1);
    }
  }
</style>

<script>
  const navItems = document.querySelectorAll("a");

  navItems.forEach((item) => {
    item.addEventListener("click", function () {
      // Remover la clase 'active' de todos los ítems
      navItems.forEach((nav) => nav.classList.remove("active"));
      // Agregar la clase 'active' al ítem seleccionado
      this.classList.add("active");
    });
  });
</script>
